package br.com.eccomerce.aplication;

import java.awt.EventQueue;

import br.com.eccomerce.dao.ClienteDAO;
import br.com.eccomerce.model.Cliente;



public class Main {


	public static void main(String[] args) {
		ClienteDAO DAO = new ClienteDAO();

		testaInclui(DAO);
		testaExibe(DAO);
		
	}
	
	private static void testaInclui(ClienteDAO DAO) {

		// TESTE INCLUSÃO DE CLIENTE
		
		Cliente cliente = new Cliente();
		cliente.setCLI_NOME("Kleber");
		cliente.setCLI_EMAIL("Julio@email.com");
		cliente.setCLI_ENDERECO("Rua A");
		cliente.setCLI_TELEFONE("(88)98888-8888");
		
		DAO.saveCliente(cliente);
		
	}

	private static void testaExibe(ClienteDAO DAO) {

		// TESTE VISUALIZAÇÃO DOS CLIENTES
		
		DAO.getClientes();
		for(Cliente c : DAO.getClientes()) {
			System.out.println("Contato: " + c.getCLI_NOME());
		}
		System.out.println();
	}
	
	private static void testaAtualiza(ClienteDAO DAO) {
		// TESTA ATUALIZAR CLIENTE
		Cliente cliente = new Cliente();
		cliente.setCLI_CODIGO(5);
		cliente.setCLI_NOME("Maria Clara");
		cliente.setCLI_EMAIL("maria@maria.com");
		cliente.setCLI_ENDERECO("Rua Z");
		cliente.setCLI_TELEFONE("9999");
		
		DAO.updateCliente(cliente);
	}
	
	private static void testaDeleta(ClienteDAO DAO) {
		Cliente cliente = new Cliente();
		cliente.setCLI_CODIGO(4);
		DAO.deleteCliente(cliente);
	}
}